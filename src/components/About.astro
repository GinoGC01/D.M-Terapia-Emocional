<style>
    *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: constantia,'Josefin Sans', sans-serif;
		text-decoration: none;
		list-style: none;
    }

    :root{
        --blanco: #f5f8fe;
        --celeste: #00a9d9;
        --rojo: #ff6761;
        --celeste-claro: #b4d2db;
        --celeste-claro-01: #dae6ff;
        --celeste-gris-oscuro: #70888f;
        --celeste-gris-oscuro-01: #646a6b;
        --celeste-gris-oscuro-02: #34393a;
    }

    @font-face{
			font-family: constantia;
			src: url('constantia.otf') format(truetype);
		}

    section{
        display: grid;
        grid-template-columns: 50% 50%;
        background-color: var(--celeste-claro);
        gap: 1em;
        height: auto;
        padding: 1.5em;
    }

    /* primer cuadrante */

    .left{
        position: relative;
        grid-column: 1/2;

    }

    .text-content > .profile-img{
        width: 19em;
        border-radius: 50%;
        box-shadow: 10px 7px 0 rgb(100, 106, 107, .3);
        background-color: white;
    }


    .profile-picture-C1{
        position: relative;
        z-index: 100;
        width: 100%;
    }

    .text-content{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1em;
        padding: 2em 0;
        background-color: var(--rojo);
        color: var(--blanco);
    }

    .text-content > h3{
        font-size: 2.3em;
    }

    .text-content > h2{
        font-size: 1.8em;
    }

    .left > span{
        position: absolute;
        z-index: 0;
        top: 20em;
        right: 19em;
        width: 23em;
        height: 15em;
        background-color: rgba(0, 0, 0, .1);
    }

    /* tercer cuadrante */

    .right{
        padding-top: 5em;
        grid-column: 2/3;
    }

    .text-description-C3{
        margin: 2em 0;
    }

    .text-description-C3, .text-description-C2{
        width: 100%;
        padding: 1em 3em;
        box-shadow: 10px 10px 0 rgba(0, 0, 0, .2);
        background-color: var(--celeste-claro-01);
    } 

    .text-description-C3 > p, .text-description-C2 > p{
        font-size: 1.7em;
        color: var(--celeste-gris-oscuro);
        font-weight: bold;
    }

    /* derecha */

    .img-C4{
        margin-top: 4em;
        background-color: var(--rojo);
        width: 100%;
        padding: 1.5em;
        height: auto;
    }

    .img-C4 > img{
        width: 100%;
        box-shadow: 15px 20px 0 var(--celeste-gris-oscuro);
    }

    .img-C4 > h2{
        position: relative;
        text-align: center;
        padding: .4em 0;
        width: 85%;
        margin: 0 auto -10px auto;
        font-size: 2em;
        color: var(--rojo);
        background-color: var(--blanco);
        box-shadow: 10px 10px 0 rgba(0, 0, 0, .1);
    }

    .img-C4 > h2 > span{
        text-transform: uppercase;
        font-size: 1.1em;
    }


    @media only screen and (max-width: 1000px){
        section{
            display: flex;
            flex-wrap: wrap;
        }
        

        .left, .right{
            width: 100%;
            padding: 0;
            margin: 10px;
        }

        .text-content > img{
            width: 9em;
        }

        .text-content{
            width: 100%;
            padding: 2em 0;
        }

        .text-description-C3, .text-description-C2{
            width: 100%;
            padding: 0.5em 1.5em;
        }

        .img-C4{
            padding: 1em;
        }


        .img-C4 > img{
            width: 100%;
        }

        .text-content > h2, .text-content > h3 {
            text-align: center;
        }

        .left > span{
            display: none;
        }

        .text-description-C3{
            margin: 0;
            margin-top: 1em;
        }


        .text-description-C3 > p, .text-description-C2 > p{
            font-size: 1.2em;
            text-align: center;
        }

        .right{
            display: flex;
            flex-wrap: wrap-reverse;
            gap: 20px;
        }

        .img-C4{
            margin-top: 0em;
        }


        .img-C4 > img{
            width: 100%;
            height: 17em;
            object-fit: cover;
            box-shadow: 10px 10px 0 var(--celeste-gris-oscuro);
        }

        .img-C4 > h2{
            padding: 0 .15em;
            font-size: 1.2em;
            color: var(--rojo);
            background-color: var(--blanco);
            box-shadow: none;
        }

        .img-C4 > h2 > span{
            text-transform: uppercase;
            font-size: 1.1em;
        }

    }
    



</style>